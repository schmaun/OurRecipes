<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".backup.GoogleDriveActivity">

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical">-->

        <TextView
            android:id="@+id/backup_google_drive_backup_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/backup_google_drive_backup_headline"
            android:textAppearance="@style/RecipeView.Headline" />

        <TextView
            android:id="@+id/backup_google_drive_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="@string/backup_google_drive_description"
            android:textAppearance="@style/RecipeView.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backup_google_drive_backup_headline" />

        <TextView
            android:id="@+id/backup_google_drive_last_backup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:ellipsize="end"
            android:text="@string/backup_google_drive_last_backup_completed_at"
            android:textAppearance="@style/RecipeView.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backup_google_drive_description" />

        <Button
            android:id="@+id/backup_google_drive_start_backup"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="@string/backup_google_drive_start_backup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backup_google_drive_last_backup" />

        <TextView
            android:id="@+id/backup_google_drive_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textAppearance="@style/RecipeView.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backup_google_drive_start_backup" />

        <ProgressBar
            android:id="@+id/backup_google_drive_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backup_google_drive_status_text" />

        <ToggleButton
            android:id="@+id/backup_google_drive_show_last_run_information"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="@null"
            android:checked="false"
            android:drawableEnd="@drawable/show_details"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:textAlignment="viewEnd"
            android:textAppearance="@style/RecipeView.Text"
            android:textOff="@string/backup_google_drive_show_last_run_information"
            android:textOn="@string/backup_google_drive_show_last_run_information"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backup_google_drive_progressbar" />

        <TextView
            android:id="@+id/backup_google_drive_last_run_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ihr sitzt bestimmt den ganzen Tag vor'm Bildschirm und ihr surft durchs Internet."
            android:textAppearance="@style/RecipeView.Text"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backup_google_drive_show_last_run_information" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@+id/backup_google_drive_last_run_information" />

        <TextView
            android:id="@+id/backup_google_drive_restore_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="@string/backup_google_drive_restore_headline"
            android:textAppearance="@style/RecipeView.Headline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <TextView
            android:id="@+id/backup_google_drive_restore_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:ellipsize="end"
            android:text="@string/backup_google_drive_restore_description"
            android:textAppearance="@style/RecipeView.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backup_google_drive_restore_headline" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/backup_google_drive_backups_to_restore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backup_google_drive_restore_description" />
    </android.support.constraint.ConstraintLayout>
    <!--</LinearLayout>-->
</android.support.v4.widget.NestedScrollView>
