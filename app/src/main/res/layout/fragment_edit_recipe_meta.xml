<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.schmaun.ourrecipes.EditRecipeActivity$EditRecipeMetaFragment">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:inputType="textMultiLine"
        android:id="@+id/edit_recipe_notes"
        android:hint="@string/edit_recipe_notes"

        android:minLines="3"
        android:gravity="top"
        app:met_floatingLabel="highlight"
        app:met_helperText="@string/edit_recipe_notes_helper_text"
        app:met_helperTextAlwaysShown="true"

        android:layout_below="@+id/edit_recipe_labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        />

    <com.rengwuxian.materialedittext.MaterialMultiAutoCompleteTextView
        android:inputType="textMultiLine"
        android:id="@+id/edit_recipe_labels"
        android:hint="@string/edit_recipe_labels"

        android:minLines="3"
        android:gravity="top"
        app:met_floatingLabel="highlight"
        app:met_helperText="@string/edit_recipe_labels_helper_text"
        app:met_helperTextAlwaysShown="true"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"

         />

</RelativeLayout>
