<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="de.schmaun.ourrecipes.EditRecipe.EditRecipeMetaFragment">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/edit_text_margin_bottom"
            android:hint="@string/edit_recipe_name"
            android:inputType="text"
            app:met_floatingLabel="highlight"
            app:met_helperText="@string/edit_recipe_name_helper_text"
            app:met_helperTextAlwaysShown="true"
            app:met_primaryColor="@color/colorAccent"
            app:met_validateOnFocusLost="true" />

        <com.rengwuxian.materialedittext.MaterialMultiAutoCompleteTextView
            android:id="@+id/edit_recipe_labels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_recipe_name"

            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/edit_text_margin_bottom"
            android:hint="@string/edit_recipe_labels"
            android:inputType="textMultiLine"
            android:minLines="1"
            app:met_floatingLabel="highlight"
            app:met_helperText="@string/edit_recipe_labels_helper_text"
            app:met_helperTextAlwaysShown="true"
            app:met_primaryColor="@color/colorAccent" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_recipe_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_recipe_labels"

            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/edit_text_margin_bottom"
            android:hint="@string/edit_recipe_notes"
            android:inputType="textMultiLine"
            android:minLines="1"
            app:met_floatingLabel="highlight"
            app:met_helperText="@string/edit_recipe_notes_helper_text"
            app:met_helperTextAlwaysShown="true"
            app:met_primaryColor="@color/colorAccent" />

        <LinearLayout
            android:id="@+id/edit_recipe_image_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_recipe_notes"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp"
            android:gravity="end"
            android:orientation="vertical">

            <Button
                android:id="@+id/edit_recipe_add_image"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_recipe_add_image" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/edit_recipe_image_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_recipe_image_header"
            android:nestedScrollingEnabled="false">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>